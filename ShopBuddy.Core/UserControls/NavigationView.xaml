<UserControl x:Class="ShopBuddy.Core.UserControls.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ShopBuddy.Core.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="60">

    <Grid>
        <ListView Width="60" HorizontalContentAlignment="Center">
            <ListViewItem
                Padding="0"
                Margin="0 4"
                Height="80"
                Width="60">
                <Button Style="{StaticResource MaterialDesignFlatDarkButton}" 
                        Padding="0"
                        Command="{Binding HomeCommand}"
                        Height="40">
                    <md:PackIcon Kind="HomeAccount"
                                 Width="40"
                                 Height="40"
                                 VerticalAlignment="Top"
                                 Padding="0"
                                 Foreground="#7c7c7c"/>
                </Button>
                        
            </ListViewItem>
            <ListViewItem
                Padding="0"
                Margin="0 4"
                Height="50"
                Width="60">
                <Button Style="{StaticResource MaterialDesignFlatDarkButton}"
                        Padding="0"
                        Command="{Binding HomeCommand}"
                        Height="40">
                    <md:PackIcon Kind="User"
                                 Width="40"
                                 Height="40"
                                 VerticalAlignment="Top"
                                 Padding="0"
                                 Foreground="#7c7c7c"/>
                </Button>
                        
            </ListViewItem>
             <ListViewItem
                Padding="0"
                Margin="0 10"
                Height="60"
                Width="60"
                HorizontalAlignment="Center">
                <Button Style="{StaticResource MaterialDesignFlatDarkButton}"
                        Padding="0"
                        Command="{Binding HomeCommand}"
                        Height="40">
                    <md:PackIcon Kind="DatabaseAdd"
                                 Width="40"
                                 Height="40"
                                 VerticalAlignment="Top"
                                 Padding="0"
                                 Foreground="#7c7c7c"/>
                </Button>
                        
            </ListViewItem>
             <ListViewItem
                Padding="0"
                Margin="0 10"
                Height="60"
                Width="60"
                HorizontalAlignment="Center">
                <Button Style="{StaticResource MaterialDesignFlatDarkButton}"
                        Padding="0"
                        Command="{Binding HomeCommand}"
                        Height="40">
                    <md:PackIcon Kind="Settings"
                                 Width="40"
                                 Height="40"
                                 VerticalAlignment="Top"
                                 Padding="0"
                                 Foreground="#7c7c7c"/>
                </Button>
                        
            </ListViewItem>
        </ListView>  
    </Grid>
</UserControl>
